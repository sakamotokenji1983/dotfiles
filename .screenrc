# エスケープキーを Ctrl+o にする
escape ^Oo

# スクリーンウィンドウ番号を1からにする
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# 256色を使用する
term xterm-256color

# ステータスバー
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

# ウェルカムメッセージを無効にする
startup_message off